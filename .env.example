# Firebase Configuration
# Get these values from Firebase Console > Project Settings
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# AI Services
# Google Cloud Natural Language API
VITE_GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# OpenAI API (for embeddings and advanced queries)
VITE_OPENAI_API_KEY=your-openai-api-key

# Feature Flags
VITE_ENABLE_TRANSLATION=false
VITE_ENABLE_MEDIA_UPLOAD=false
VITE_ENABLE_POLLS=false

# Development
VITE_USE_EMULATORS=true
VITE_EMULATOR_HOST=localhost

# Analytics (optional)
VITE_MIXPANEL_TOKEN=your-mixpanel-token
VITE_SENTRY_DSN=your-sentry-dsn

# Environment
VITE_ENV=development